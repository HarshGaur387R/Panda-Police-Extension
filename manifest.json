{
	"name": "Panda Police",
	"description": "This extension blocks websites",
	"version": "1.0",
	"manifest_version": 3,
	"icons": {
		"16": "icons/icon-16.png",
		"128": "icons/icon-128.png"
	},
	"permissions": [
		"activeTab",
		"storage",
		"tabs",
		"webNavigation"
	],
	"action": {
		"default_popup": "popup.html",
		"default_icon": "icons/icon-128.png"
	},
	"background": {
		"service_worker": "./background.js",
		"type": "module"
	}
}